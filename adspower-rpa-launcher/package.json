{
  "name": "adspower-rpa-launcher",
  "version": "1.0.0",
  "description": "AdsPower RPA Launcher - Profile Lifecycle Automation System",
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "npm run start:backend",
    "start:backend": "node ./src/backend/server.js",
    "electron": "electron .",
    "electron:dev": "npm run build:frontend && electron .",
    "dev:electron": "concurrently \"npm run start:backend\" \"wait-on http://localhost:4000 && electron .\"",
    "build:frontend": "echo Skipping (add real build script)",
    "react-dev": "react-scripts start",
    "react-build": "react-scripts build",
    "build": "npm run react-build && electron-builder",
    "dist": "npm run react-build && electron-builder --publish=never"
  },
  "keywords": [
    "adspower",
    "rpa",
    "automation",
    "profile-management",
    "electron"
  ],
  "author": "AdsPower RPA Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.0.0",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer-core": "^24.23.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.4",
    "web-vitals": "^2.1.4",
    "ws": "^8.18.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.adspower.rpa.launcher",
    "productName": "AdsPower RPA Launcher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "src/backend/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  }
}
